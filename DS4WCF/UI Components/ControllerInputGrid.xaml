<UserControl x:Class="DS4WCF.ControllerInputGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Height="300" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Image Name="IconControllerType" OpacityMask="White" />
        <StackPanel Grid.Column="1" HorizontalAlignment="Left" Height="150" VerticalAlignment="Top" Width="150">
            <StackPanel Height="30" Orientation="Horizontal">
                <Label Content="Battery:" Width="57"/>
                <Label Content="{Binding BatteryLevel}" Width="92"/>
            </StackPanel>
        </StackPanel>
        <Rectangle Fill="{Binding BarColor}"></Rectangle>
    </Grid>
</UserControl>
